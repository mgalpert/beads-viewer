{
  "name": "beads-viewer",
  "private": false,
  "version": "0.1.0",
  "description": "A web interface for humans to interact with Beads - the dependency-aware issue tracker made for agents (compatible with Beads CLI v0.9.6)",
  "author": "Michael Galpert (x.com/msg)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mgalpert/beads-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/mgalpert/beads-viewer/issues"
  },
  "homepage": "https://github.com/mgalpert/beads-viewer#readme",
  "keywords": [
    "beads",
    "issue-tracker",
    "kanban",
    "project-management",
    "dependency-tracking",
    "react",
    "typescript"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "server": "bun --watch server/index.ts",
    "dev:full": "bun run server & bun run dev",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
